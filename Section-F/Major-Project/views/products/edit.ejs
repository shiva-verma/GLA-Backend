<% layout('layout/boilerplate') -%>

    <h1>Edit Products</h1>
    <form action="/product/<%= i._id %>?_method=PATCH" method="post">
        <div class="mb-3">
          <label for="productName" class="form-label">Product Name</label>
          <input type="text" class="form-control" id="productName" name="productName" value="<%= i.productName %>">
        </div>
        <div class="mb-3">
          <label for="price" class="form-label">Price</label>
          <input type="number" class="form-control" id="price" name="price" value="<%= i.price %>">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <input type="text" class="form-control" id="description" name="description" value="<%= i.description %>">
        </div>
        <div class="mb-3">
            <label for="imageUrl" class="form-label">Image url</label>
            <input type="text" class="form-control" id="imageUrl" name="imageUrl" value="<%= i.imageUrl %>">
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
      </form>